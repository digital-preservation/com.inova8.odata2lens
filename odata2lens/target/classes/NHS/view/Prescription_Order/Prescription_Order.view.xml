<mvc:View controllerName="com.inova8.lens.controller.Entity360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:table="sap.ui.table" xmlns:rdf="com.inova8.lens.control" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core">
	<Page showHeader="true" id="page" navButtonPress="onNavBack" showNavButton="false" title="{i18n>Prescription_Order.Title}" busy="{entityView>/busy}"
		busyIndicatorDelay="{entityView>/delay}" >
		<customHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<HBox id="sourceTitle" alignItems="Center">
						<rdf:TextResource id="selectedResource" path="" entitySet=""/>
				</HBox>	
				<Title id="pathTitle" text="{entityView>/navigation}"/>
				<HBox id="versionsTitle" alignItems="Center">
					<Title text="(" required="false"/>
					<ComboBox id="versionSelection" items="{ path: 'entityView>/versions' }" selectionChange="onVersionChange">
						<core:Item key="{entityView>navigation}" text="{entityView>text}"/>
					</ComboBox>
					<Title text=")" required="false"/>
				</HBox>
				<Title text="{i18n>Prescription_Order.this}"/>
				<Title text="(" required="false"/>
				<rdf:TextResource path="dataModel>" entitySet="Prescription_Order"/>
				<Title text=")" required="false"/>
	
				<ToolbarSpacer/>
				<ToggleButton id="toggleColumns" icon="sap-icon://hide" activeIcon="sap-icon://show" press="onSettingsPressed" visible="false"	>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</ToggleButton>
				
			</Toolbar>
		</customHeader>
		<Table id="form360" inset="false" fixedLayout="true" class="multicolumnform" updateFinished="hideColumns">
			<columns>
				<Column hAlign="Right" width="200px">
					<Text text=""/>
				</Column>
				<Column visible="true">
				</Column>
			</columns>
			<items>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>Prescription_Order.Prescription_Order_ACT_COST}" required="false"/> 
						<Text text="{dataModel>Prescription_Order_ACT_COST}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>Prescription_Order.Prescription_Order_BNF_NAME}" required="false"/> 
						<rdf:TextLink text="{path:'dataModel>Prescription_Order_BNF_NAME',type:'sap.ui.model.type.String' }" linkText="{i18n>Prescription_Order.Prescription_Order_BNF_NAME}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>Prescription_Order.Prescription_Order_ITEMS}" required="false"/> 
						<Text text="{path:'dataModel>Prescription_Order_ITEMS',type:'sap.ui.model.type.Integer' }"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>Prescription_Order.Prescription_Order_NIC}" required="false"/> 
						<Text text="{dataModel>Prescription_Order_NIC}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>Prescription_Order.Prescription_Order_PERIOD}" required="false"/> 
						<Text text="{dataModel>Prescription_Order_PERIOD}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>Prescription_Order.Prescription_Order_QUANTITY}" required="false"/> 
						<Text text="{dataModel>Prescription_Order_QUANTITY}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>Prescription_Order.Prescription_Order_PRACTICE}" required="false"/> 
						<rdf:TextResource path="dataModel>Prescription_Order_PRACTICE" entitySet="GP_Practice"/>		
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>Prescription_Order.Prescription_Order_BNF_CODE}" required="false"/> 
						<rdf:ListResource path="dataModel>Prescription_Order_BNF_CODE" entitySet="BNF_Medicinal_Product"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>Prescription_Order.Prescription_Order_SHA}" required="false"/> 
						<rdf:ListResource path="dataModel>Prescription_Order_SHA" entitySet="Geographical_Region"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</mvc:View>