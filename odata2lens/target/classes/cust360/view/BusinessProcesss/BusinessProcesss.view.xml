<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>BusinessProcesss.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/BusinessProcess' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>BusinessProcesss.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>BusinessProcesss.BusinessProcess_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>BusinessProcesss.BusinessProcess_Description}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>BusinessProcesss.BusinessProcess_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>BusinessProcesss.BusinessProcess_IsActive}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>BusinessProcesss.BusinessProcess_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>BusinessProcesss.BusinessProcess_Name}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>BusinessProcesss.BusinessProcess_NamespacePrefix}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>BusinessProcesss.BusinessProcess_SystemModstamp}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>BusinessProcesss.BusinessProcess_TableEnumOrId}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="BusinessProcess"/>
							<VBox>					
							<Text text="{dataModel>BusinessProcess_CreatedDate/BusinessProcess_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>BusinessProcess_Description/BusinessProcess_Description',type:'sap.ui.model.type.String'}" linkText="{i18n>BusinessProcess.BusinessProcess_Description/BusinessProcess_Description}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>BusinessProcess_Id/BusinessProcess_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>BusinessProcess.BusinessProcess_Id/BusinessProcess_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>BusinessProcess_IsActive/BusinessProcess_IsActive',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>BusinessProcess_LastModifiedDate/BusinessProcess_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>BusinessProcess_Name/BusinessProcess_Name',type:'sap.ui.model.type.String'}" linkText="{i18n>BusinessProcess.BusinessProcess_Name/BusinessProcess_Name}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>BusinessProcess_NamespacePrefix/BusinessProcess_NamespacePrefix',type:'sap.ui.model.type.String'}" linkText="{i18n>BusinessProcess.BusinessProcess_NamespacePrefix/BusinessProcess_NamespacePrefix}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>BusinessProcess_SystemModstamp/BusinessProcess_SystemModstamp}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>BusinessProcess_TableEnumOrId/BusinessProcess_TableEnumOrId',type:'sap.ui.model.type.String'}" linkText="{i18n>BusinessProcess.BusinessProcess_TableEnumOrId/BusinessProcess_TableEnumOrId}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>