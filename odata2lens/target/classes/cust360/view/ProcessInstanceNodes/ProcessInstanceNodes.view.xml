<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>ProcessInstanceNodes.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/ProcessInstanceNode' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>ProcessInstanceNodes.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceNodes.ProcessInstanceNode_CompletedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceNodes.ProcessInstanceNode_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceNodes.ProcessInstanceNode_ElapsedTimeInDays}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceNodes.ProcessInstanceNode_ElapsedTimeInHours}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceNodes.ProcessInstanceNode_ElapsedTimeInMinutes}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceNodes.ProcessInstanceNode_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceNodes.ProcessInstanceNode_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceNodes.ProcessInstanceNode_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceNodes.ProcessInstanceNode_NodeStatus}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceNodes.ProcessInstanceNode_ProcessNodeName}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceNodes.ProcessInstanceNode_SystemModstamp}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="ProcessInstanceNode"/>
							<VBox>					
							<Text text="{dataModel>ProcessInstanceNode_CompletedDate/ProcessInstanceNode_CompletedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>ProcessInstanceNode_CreatedDate/ProcessInstanceNode_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>ProcessInstanceNode_ElapsedTimeInDays/ProcessInstanceNode_ElapsedTimeInDays',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>ProcessInstanceNode_ElapsedTimeInHours/ProcessInstanceNode_ElapsedTimeInHours',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>ProcessInstanceNode_ElapsedTimeInMinutes/ProcessInstanceNode_ElapsedTimeInMinutes',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ProcessInstanceNode_Id/ProcessInstanceNode_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>ProcessInstanceNode.ProcessInstanceNode_Id/ProcessInstanceNode_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>ProcessInstanceNode_IsDeleted/ProcessInstanceNode_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>ProcessInstanceNode_LastModifiedDate/ProcessInstanceNode_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ProcessInstanceNode_NodeStatus/ProcessInstanceNode_NodeStatus',type:'sap.ui.model.type.String'}" linkText="{i18n>ProcessInstanceNode.ProcessInstanceNode_NodeStatus/ProcessInstanceNode_NodeStatus}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ProcessInstanceNode_ProcessNodeName/ProcessInstanceNode_ProcessNodeName',type:'sap.ui.model.type.String'}" linkText="{i18n>ProcessInstanceNode.ProcessInstanceNode_ProcessNodeName/ProcessInstanceNode_ProcessNodeName}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>ProcessInstanceNode_SystemModstamp/ProcessInstanceNode_SystemModstamp}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>