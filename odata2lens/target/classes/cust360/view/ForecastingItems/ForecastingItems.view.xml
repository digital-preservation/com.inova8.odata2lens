							<VBox>					
							<Text text="{path:'dataModel>ForecastingItem_QuantityWithoutManagerAdjustment/ForecastingItem_QuantityWithoutManagerAdjustment',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>ForecastingItem_QuantityWithoutOwnerAdjustment/ForecastingItem_QuantityWithoutOwnerAdjustment',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
