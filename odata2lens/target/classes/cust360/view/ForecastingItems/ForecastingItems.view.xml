							<Text text="{path:'dataModel>ForecastingItem_AmountWithoutAdjustments/ForecastingItem_AmountWithoutAdjustments',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
