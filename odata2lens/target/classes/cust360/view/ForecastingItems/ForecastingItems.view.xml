					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingItems.ForecastingItem_IsQuantity}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingItems.ForecastingItem_IsUpToDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingItems.ForecastingItem_OwnerOnlyAmount}"/>
