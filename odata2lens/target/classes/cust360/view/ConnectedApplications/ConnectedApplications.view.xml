<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>ConnectedApplications.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/ConnectedApplication' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>ConnectedApplications.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ConnectedApplications.ConnectedApplication_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ConnectedApplications.ConnectedApplication_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ConnectedApplications.ConnectedApplication_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ConnectedApplications.ConnectedApplication_MobileSessionTimeout}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ConnectedApplications.ConnectedApplication_MobileStartUrl}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ConnectedApplications.ConnectedApplication_Name}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ConnectedApplications.ConnectedApplication_OptionsAllowAdminApprovedUsersOnly}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ConnectedApplications.ConnectedApplication_OptionsHasSessionLevelPolicy}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ConnectedApplications.ConnectedApplication_OptionsIsInternal}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ConnectedApplications.ConnectedApplication_OptionsRefreshTokenValidityMetric}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ConnectedApplications.ConnectedApplication_PinLength}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ConnectedApplications.ConnectedApplication_RefreshTokenValidityPeriod}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ConnectedApplications.ConnectedApplication_StartUrl}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ConnectedApplications.ConnectedApplication_SystemModstamp}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="ConnectedApplication"/>
							<VBox>					
							<Text text="{dataModel>ConnectedApplication_CreatedDate/ConnectedApplication_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ConnectedApplication_Id/ConnectedApplication_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>ConnectedApplication.ConnectedApplication_Id/ConnectedApplication_Id}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>ConnectedApplication_LastModifiedDate/ConnectedApplication_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ConnectedApplication_MobileSessionTimeout/ConnectedApplication_MobileSessionTimeout',type:'sap.ui.model.type.String'}" linkText="{i18n>ConnectedApplication.ConnectedApplication_MobileSessionTimeout/ConnectedApplication_MobileSessionTimeout}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ConnectedApplication_MobileStartUrl/ConnectedApplication_MobileStartUrl',type:'sap.ui.model.type.String'}" linkText="{i18n>ConnectedApplication.ConnectedApplication_MobileStartUrl/ConnectedApplication_MobileStartUrl}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ConnectedApplication_Name/ConnectedApplication_Name',type:'sap.ui.model.type.String'}" linkText="{i18n>ConnectedApplication.ConnectedApplication_Name/ConnectedApplication_Name}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>ConnectedApplication_OptionsAllowAdminApprovedUsersOnly/ConnectedApplication_OptionsAllowAdminApprovedUsersOnly',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>ConnectedApplication_OptionsHasSessionLevelPolicy/ConnectedApplication_OptionsHasSessionLevelPolicy',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>ConnectedApplication_OptionsIsInternal/ConnectedApplication_OptionsIsInternal',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>ConnectedApplication_OptionsRefreshTokenValidityMetric/ConnectedApplication_OptionsRefreshTokenValidityMetric',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ConnectedApplication_PinLength/ConnectedApplication_PinLength',type:'sap.ui.model.type.String'}" linkText="{i18n>ConnectedApplication.ConnectedApplication_PinLength/ConnectedApplication_PinLength}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>ConnectedApplication_RefreshTokenValidityPeriod/ConnectedApplication_RefreshTokenValidityPeriod',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ConnectedApplication_StartUrl/ConnectedApplication_StartUrl',type:'sap.ui.model.type.String'}" linkText="{i18n>ConnectedApplication.ConnectedApplication_StartUrl/ConnectedApplication_StartUrl}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>ConnectedApplication_SystemModstamp/ConnectedApplication_SystemModstamp}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>