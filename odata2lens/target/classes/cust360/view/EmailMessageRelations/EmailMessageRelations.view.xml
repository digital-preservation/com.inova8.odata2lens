<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>EmailMessageRelations.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/EmailMessageRelation' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>EmailMessageRelations.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EmailMessageRelations.EmailMessageRelation_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EmailMessageRelations.EmailMessageRelation_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EmailMessageRelations.EmailMessageRelation_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EmailMessageRelations.EmailMessageRelation_RelationAddress}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EmailMessageRelations.EmailMessageRelation_RelationObjectType}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EmailMessageRelations.EmailMessageRelation_RelationType}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EmailMessageRelations.EmailMessageRelation_SystemModstamp}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="EmailMessageRelation"/>
							<VBox>					
							<Text text="{dataModel>EmailMessageRelation_CreatedDate/EmailMessageRelation_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>EmailMessageRelation_Id/EmailMessageRelation_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>EmailMessageRelation.EmailMessageRelation_Id/EmailMessageRelation_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>EmailMessageRelation_IsDeleted/EmailMessageRelation_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>EmailMessageRelation_RelationAddress/EmailMessageRelation_RelationAddress',type:'sap.ui.model.type.String'}" linkText="{i18n>EmailMessageRelation.EmailMessageRelation_RelationAddress/EmailMessageRelation_RelationAddress}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>EmailMessageRelation_RelationObjectType/EmailMessageRelation_RelationObjectType',type:'sap.ui.model.type.String'}" linkText="{i18n>EmailMessageRelation.EmailMessageRelation_RelationObjectType/EmailMessageRelation_RelationObjectType}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>EmailMessageRelation_RelationType/EmailMessageRelation_RelationType',type:'sap.ui.model.type.String'}" linkText="{i18n>EmailMessageRelation.EmailMessageRelation_RelationType/EmailMessageRelation_RelationType}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>EmailMessageRelation_SystemModstamp/EmailMessageRelation_SystemModstamp}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>