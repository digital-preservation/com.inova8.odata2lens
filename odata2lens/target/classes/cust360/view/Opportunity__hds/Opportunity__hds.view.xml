<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>Opportunity__hds.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/Opportunity__hd' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>Opportunity__hds.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_Amount__hpr}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_Amount__hst}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_CloseDate__hpr}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_CloseDate__hst}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_ForecastCategoryName__hpr}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_ForecastCategoryName__hst}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_Probability__hpr}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_Probability__hst}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_StageName__hpr}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_StageName__hst}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_SystemModstamp}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_ValidFromDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Opportunity__hds.Opportunity__hd_ValidToDate}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="Opportunity__hd"/>
							<VBox>					
							<Text text="{path:'dataModel>Opportunity__hd_Amount__hpr/Opportunity__hd_Amount__hpr',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>Opportunity__hd_Amount__hst/Opportunity__hd_Amount__hst',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>Opportunity__hd_CloseDate__hpr/Opportunity__hd_CloseDate__hpr}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>Opportunity__hd_CloseDate__hst/Opportunity__hd_CloseDate__hst}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>Opportunity__hd_CreatedDate/Opportunity__hd_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Opportunity__hd_ForecastCategoryName__hpr/Opportunity__hd_ForecastCategoryName__hpr',type:'sap.ui.model.type.String'}" linkText="{i18n>Opportunity__hd.Opportunity__hd_ForecastCategoryName__hpr/Opportunity__hd_ForecastCategoryName__hpr}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Opportunity__hd_ForecastCategoryName__hst/Opportunity__hd_ForecastCategoryName__hst',type:'sap.ui.model.type.String'}" linkText="{i18n>Opportunity__hd.Opportunity__hd_ForecastCategoryName__hst/Opportunity__hd_ForecastCategoryName__hst}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Opportunity__hd_Id/Opportunity__hd_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>Opportunity__hd.Opportunity__hd_Id/Opportunity__hd_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>Opportunity__hd_IsDeleted/Opportunity__hd_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>Opportunity__hd_Probability__hpr/Opportunity__hd_Probability__hpr',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>Opportunity__hd_Probability__hst/Opportunity__hd_Probability__hst',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Opportunity__hd_StageName__hpr/Opportunity__hd_StageName__hpr',type:'sap.ui.model.type.String'}" linkText="{i18n>Opportunity__hd.Opportunity__hd_StageName__hpr/Opportunity__hd_StageName__hpr}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Opportunity__hd_StageName__hst/Opportunity__hd_StageName__hst',type:'sap.ui.model.type.String'}" linkText="{i18n>Opportunity__hd.Opportunity__hd_StageName__hst/Opportunity__hd_StageName__hst}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>Opportunity__hd_SystemModstamp/Opportunity__hd_SystemModstamp}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>Opportunity__hd_ValidFromDate/Opportunity__hd_ValidFromDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>Opportunity__hd_ValidToDate/Opportunity__hd_ValidToDate}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>