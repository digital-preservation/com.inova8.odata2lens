<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>QuoteLineItems.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/QuoteLineItem' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>QuoteLineItems.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteLineItems.QuoteLineItem_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteLineItems.QuoteLineItem_Description}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteLineItems.QuoteLineItem_Discount}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteLineItems.QuoteLineItem_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteLineItems.QuoteLineItem_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteLineItems.QuoteLineItem_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteLineItems.QuoteLineItem_LineNumber}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteLineItems.QuoteLineItem_ListPrice}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteLineItems.QuoteLineItem_Quantity}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteLineItems.QuoteLineItem_ServiceDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteLineItems.QuoteLineItem_SortOrder}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteLineItems.QuoteLineItem_Subtotal}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteLineItems.QuoteLineItem_SystemModstamp}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteLineItems.QuoteLineItem_TotalPrice}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteLineItems.QuoteLineItem_UnitPrice}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="QuoteLineItem"/>
							<VBox>					
							<Text text="{dataModel>QuoteLineItem_CreatedDate/QuoteLineItem_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>QuoteLineItem_Description/QuoteLineItem_Description',type:'sap.ui.model.type.String'}" linkText="{i18n>QuoteLineItem.QuoteLineItem_Description/QuoteLineItem_Description}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>QuoteLineItem_Discount/QuoteLineItem_Discount',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>QuoteLineItem_Id/QuoteLineItem_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>QuoteLineItem.QuoteLineItem_Id/QuoteLineItem_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>QuoteLineItem_IsDeleted/QuoteLineItem_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>QuoteLineItem_LastModifiedDate/QuoteLineItem_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>QuoteLineItem_LineNumber/QuoteLineItem_LineNumber',type:'sap.ui.model.type.String'}" linkText="{i18n>QuoteLineItem.QuoteLineItem_LineNumber/QuoteLineItem_LineNumber}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>QuoteLineItem_ListPrice/QuoteLineItem_ListPrice',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>QuoteLineItem_Quantity/QuoteLineItem_Quantity',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>QuoteLineItem_ServiceDate/QuoteLineItem_ServiceDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>QuoteLineItem_SortOrder/QuoteLineItem_SortOrder',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>QuoteLineItem_Subtotal/QuoteLineItem_Subtotal',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>QuoteLineItem_SystemModstamp/QuoteLineItem_SystemModstamp}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>QuoteLineItem_TotalPrice/QuoteLineItem_TotalPrice',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>QuoteLineItem_UnitPrice/QuoteLineItem_UnitPrice',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>