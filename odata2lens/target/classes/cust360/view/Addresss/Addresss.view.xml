<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>Addresss.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/Address' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>Addresss.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Addresss.Address_Line1}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Addresss.Address_Line2}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Addresss.Address_Line3}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Addresss.Address_Line4}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Addresss.Address_Line5}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Addresss.Address_Postcode}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="Address"/>
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Address_Line1/Address_Line1',type:'sap.ui.model.type.String'}" linkText="{i18n>Address.Address_Line1/Address_Line1}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Address_Line2/Address_Line2',type:'sap.ui.model.type.String'}" linkText="{i18n>Address.Address_Line2/Address_Line2}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Address_Line3/Address_Line3',type:'sap.ui.model.type.String'}" linkText="{i18n>Address.Address_Line3/Address_Line3}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Address_Line4/Address_Line4',type:'sap.ui.model.type.String'}" linkText="{i18n>Address.Address_Line4/Address_Line4}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Address_Line5/Address_Line5',type:'sap.ui.model.type.String'}" linkText="{i18n>Address.Address_Line5/Address_Line5}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Address_Postcode/Address_Postcode',type:'sap.ui.model.type.String'}" linkText="{i18n>Address.Address_Postcode/Address_Postcode}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>