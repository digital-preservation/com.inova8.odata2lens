<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>CustomBrandAssets.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/CustomBrandAsset' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>CustomBrandAssets.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>CustomBrandAssets.CustomBrandAsset_AssetCategory}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>CustomBrandAssets.CustomBrandAsset_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>CustomBrandAssets.CustomBrandAsset_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>CustomBrandAssets.CustomBrandAsset_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>CustomBrandAssets.CustomBrandAsset_TextAsset}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="CustomBrandAsset"/>
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>CustomBrandAsset_AssetCategory/CustomBrandAsset_AssetCategory',type:'sap.ui.model.type.String'}" linkText="{i18n>CustomBrandAsset.CustomBrandAsset_AssetCategory/CustomBrandAsset_AssetCategory}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>CustomBrandAsset_CreatedDate/CustomBrandAsset_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>CustomBrandAsset_Id/CustomBrandAsset_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>CustomBrandAsset.CustomBrandAsset_Id/CustomBrandAsset_Id}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>CustomBrandAsset_LastModifiedDate/CustomBrandAsset_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>CustomBrandAsset_TextAsset/CustomBrandAsset_TextAsset',type:'sap.ui.model.type.String'}" linkText="{i18n>CustomBrandAsset.CustomBrandAsset_TextAsset/CustomBrandAsset_TextAsset}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>