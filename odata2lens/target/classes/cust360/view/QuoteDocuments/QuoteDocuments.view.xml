<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>QuoteDocuments.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/QuoteDocument' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>QuoteDocuments.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteDocuments.QuoteDocument_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteDocuments.QuoteDocument_Discount}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteDocuments.QuoteDocument_Document}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteDocuments.QuoteDocument_GrandTotal}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteDocuments.QuoteDocument_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteDocuments.QuoteDocument_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteDocuments.QuoteDocument_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteDocuments.QuoteDocument_Name}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>QuoteDocuments.QuoteDocument_SystemModstamp}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="QuoteDocument"/>
							<VBox>					
							<Text text="{dataModel>QuoteDocument_CreatedDate/QuoteDocument_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>QuoteDocument_Discount/QuoteDocument_Discount',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
								<Text text="{dataModel>QuoteDocument_Document/QuoteDocument_Document}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>QuoteDocument_GrandTotal/QuoteDocument_GrandTotal',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>QuoteDocument_Id/QuoteDocument_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>QuoteDocument.QuoteDocument_Id/QuoteDocument_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>QuoteDocument_IsDeleted/QuoteDocument_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>QuoteDocument_LastModifiedDate/QuoteDocument_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>QuoteDocument_Name/QuoteDocument_Name',type:'sap.ui.model.type.String'}" linkText="{i18n>QuoteDocument.QuoteDocument_Name/QuoteDocument_Name}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>QuoteDocument_SystemModstamp/QuoteDocument_SystemModstamp}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>