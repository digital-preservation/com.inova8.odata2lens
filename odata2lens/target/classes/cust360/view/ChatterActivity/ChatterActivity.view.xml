<mvc:View controllerName="com.inova8.lens.controller.Entity360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:table="sap.ui.table" xmlns:rdf="com.inova8.lens.control" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core">
	<Page showHeader="true" id="page" navButtonPress="onNavBack" showNavButton="false" title="{i18n>ChatterActivity.Title}" busy="{entityView>/busy}"
		busyIndicatorDelay="{entityView>/delay}" >
		<customHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<HBox id="sourceTitle" alignItems="Center">
						<rdf:TextResource id="selectedResource" path="" entitySet=""/>
				</HBox>	
				<Title id="pathTitle" text="{entityView>/navigation}"/>
				<HBox id="versionsTitle" alignItems="Center">
					<Title text="(" required="false"/>
					<ComboBox id="versionSelection" items="{ path: 'entityView>/versions' }" selectionChange="onVersionChange">
						<core:Item key="{entityView>navigation}" text="{entityView>text}"/>
					</ComboBox>
					<Title text=")" required="false"/>
				</HBox>
				<Title text="{i18n>ChatterActivity.this}"/>
				<Title text="(" required="false"/>
				<rdf:TextResource path="dataModel>" entitySet="ChatterActivity"/>
				<Title text=")" required="false"/>
	
				<ToolbarSpacer/>
				<ToggleButton id="toggleColumns" icon="sap-icon://hide" activeIcon="sap-icon://show" press="onSettingsPressed" visible="false"	>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</ToggleButton>
				
			</Toolbar>
		</customHeader>
		<Table id="form360" inset="false" fixedLayout="true" class="multicolumnform" updateFinished="hideColumns">
			<columns>
				<Column hAlign="Right" width="200px">
					<Text text=""/>
				</Column>
				<Column visible="true">
				</Column>
				<Column visible="true">
					<Text text="ChatterActivity"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>ChatterActivity.ChatterActivity_CommentCount}" required="false"/> 
						<Text text=""/>
						<Text text="{path:'dataModel>ChatterActivity_CommentCount/ChatterActivity_CommentCount',type:'sap.ui.model.type.Integer' }"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>ChatterActivity.ChatterActivity_CommentReceivedCount}" required="false"/> 
						<Text text=""/>
						<Text text="{path:'dataModel>ChatterActivity_CommentReceivedCount/ChatterActivity_CommentReceivedCount',type:'sap.ui.model.type.Integer' }"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>ChatterActivity.ChatterActivity_Id}" required="false"/> 
						<Text text=""/>
						<rdf:TextLink text="{path:'dataModel>ChatterActivity_Id/ChatterActivity_Id',type:'sap.ui.model.type.String' }" linkText="{i18n>ChatterActivity.ChatterActivity_Id/ChatterActivity_Id}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>ChatterActivity.ChatterActivity_InfluenceRawRank}" required="false"/> 
						<Text text=""/>
						<Text text="{path:'dataModel>ChatterActivity_InfluenceRawRank/ChatterActivity_InfluenceRawRank',type:'sap.ui.model.type.Integer' }"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>ChatterActivity.ChatterActivity_LikeReceivedCount}" required="false"/> 
						<Text text=""/>
						<Text text="{path:'dataModel>ChatterActivity_LikeReceivedCount/ChatterActivity_LikeReceivedCount',type:'sap.ui.model.type.Integer' }"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>ChatterActivity.ChatterActivity_ParentId}" required="false"/> 
						<Text text=""/>
						<rdf:ListResource path="dataModel>ChatterActivity_ParentId/sfdc_ChatterActivity_ParentId" entitySet="User"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>ChatterActivity.ChatterActivity_PostCount}" required="false"/> 
						<Text text=""/>
						<Text text="{path:'dataModel>ChatterActivity_PostCount/ChatterActivity_PostCount',type:'sap.ui.model.type.Integer' }"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>ChatterActivity.ChatterActivity_SystemModstamp}" required="false"/> 
						<Text text=""/>
						<Text text="{dataModel>ChatterActivity_SystemModstamp/ChatterActivity_SystemModstamp}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>ChatterActivity.ChatterActivity_ParentId}" required="false"/> 
						<rdf:ListResource path="dataModel>ChatterActivity_ParentId" entitySet="User"/>
						<Text text=""/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</mvc:View>