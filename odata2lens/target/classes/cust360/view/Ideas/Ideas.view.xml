<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>Ideas.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/Idea' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>Ideas.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_Body}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_Categories}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_CreatorFullPhotoUrl}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_CreatorName}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_CreatorSmallPhotoUrl}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_IsHtml}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_IsMerged}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_LastCommentDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_LastReferencedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_LastViewedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_NumComments}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_Status}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_SystemModstamp}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_Title}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_VoteScore}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Ideas.Idea_VoteTotal}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="Idea"/>
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Idea_Body/Idea_Body',type:'sap.ui.model.type.String'}" linkText="{i18n>Idea.Idea_Body/Idea_Body}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Idea_Categories/Idea_Categories',type:'sap.ui.model.type.String'}" linkText="{i18n>Idea.Idea_Categories/Idea_Categories}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>Idea_CreatedDate/Idea_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Idea_CreatorFullPhotoUrl/Idea_CreatorFullPhotoUrl',type:'sap.ui.model.type.String'}" linkText="{i18n>Idea.Idea_CreatorFullPhotoUrl/Idea_CreatorFullPhotoUrl}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Idea_CreatorName/Idea_CreatorName',type:'sap.ui.model.type.String'}" linkText="{i18n>Idea.Idea_CreatorName/Idea_CreatorName}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Idea_CreatorSmallPhotoUrl/Idea_CreatorSmallPhotoUrl',type:'sap.ui.model.type.String'}" linkText="{i18n>Idea.Idea_CreatorSmallPhotoUrl/Idea_CreatorSmallPhotoUrl}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Idea_Id/Idea_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>Idea.Idea_Id/Idea_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>Idea_IsDeleted/Idea_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>Idea_IsHtml/Idea_IsHtml',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>Idea_IsMerged/Idea_IsMerged',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>Idea_LastCommentDate/Idea_LastCommentDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>Idea_LastModifiedDate/Idea_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>Idea_LastReferencedDate/Idea_LastReferencedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>Idea_LastViewedDate/Idea_LastViewedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>Idea_NumComments/Idea_NumComments',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Idea_Status/Idea_Status',type:'sap.ui.model.type.String'}" linkText="{i18n>Idea.Idea_Status/Idea_Status}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>Idea_SystemModstamp/Idea_SystemModstamp}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>Idea_Title/Idea_Title',type:'sap.ui.model.type.String'}" linkText="{i18n>Idea.Idea_Title/Idea_Title}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>Idea_VoteScore/Idea_VoteScore',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>Idea_VoteTotal/Idea_VoteTotal',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>