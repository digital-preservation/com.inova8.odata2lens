<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>EntitlementTemplates.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/EntitlementTemplate' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>EntitlementTemplates.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementTemplates.EntitlementTemplate_CasesPerEntitlement}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementTemplates.EntitlementTemplate_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementTemplates.EntitlementTemplate_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementTemplates.EntitlementTemplate_IsPerIncident}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementTemplates.EntitlementTemplate_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementTemplates.EntitlementTemplate_Name}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementTemplates.EntitlementTemplate_NamespacePrefix}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementTemplates.EntitlementTemplate_SystemModstamp}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementTemplates.EntitlementTemplate_Term}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementTemplates.EntitlementTemplate_Type}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="EntitlementTemplate"/>
							<VBox>					
							<Text text="{path:'dataModel>EntitlementTemplate_CasesPerEntitlement/EntitlementTemplate_CasesPerEntitlement',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>EntitlementTemplate_CreatedDate/EntitlementTemplate_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>EntitlementTemplate_Id/EntitlementTemplate_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>EntitlementTemplate.EntitlementTemplate_Id/EntitlementTemplate_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>EntitlementTemplate_IsPerIncident/EntitlementTemplate_IsPerIncident',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>EntitlementTemplate_LastModifiedDate/EntitlementTemplate_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>EntitlementTemplate_Name/EntitlementTemplate_Name',type:'sap.ui.model.type.String'}" linkText="{i18n>EntitlementTemplate.EntitlementTemplate_Name/EntitlementTemplate_Name}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>EntitlementTemplate_NamespacePrefix/EntitlementTemplate_NamespacePrefix',type:'sap.ui.model.type.String'}" linkText="{i18n>EntitlementTemplate.EntitlementTemplate_NamespacePrefix/EntitlementTemplate_NamespacePrefix}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>EntitlementTemplate_SystemModstamp/EntitlementTemplate_SystemModstamp}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>EntitlementTemplate_Term/EntitlementTemplate_Term',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>EntitlementTemplate_Type/EntitlementTemplate_Type',type:'sap.ui.model.type.String'}" linkText="{i18n>EntitlementTemplate.EntitlementTemplate_Type/EntitlementTemplate_Type}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>