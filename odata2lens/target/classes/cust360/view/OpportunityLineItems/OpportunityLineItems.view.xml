<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>OpportunityLineItems.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/OpportunityLineItem' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>OpportunityLineItems.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityLineItems.OpportunityLineItem_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityLineItems.OpportunityLineItem_Description}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityLineItems.OpportunityLineItem_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityLineItems.OpportunityLineItem_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityLineItems.OpportunityLineItem_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityLineItems.OpportunityLineItem_ListPrice}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityLineItems.OpportunityLineItem_Name}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityLineItems.OpportunityLineItem_ProductCode}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityLineItems.OpportunityLineItem_Quantity}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityLineItems.OpportunityLineItem_ServiceDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityLineItems.OpportunityLineItem_SortOrder}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityLineItems.OpportunityLineItem_SystemModstamp}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityLineItems.OpportunityLineItem_TotalPrice}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityLineItems.OpportunityLineItem_UnitPrice}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="OpportunityLineItem"/>
							<VBox>					
							<Text text="{dataModel>OpportunityLineItem_CreatedDate/OpportunityLineItem_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OpportunityLineItem_Description/OpportunityLineItem_Description',type:'sap.ui.model.type.String'}" linkText="{i18n>OpportunityLineItem.OpportunityLineItem_Description/OpportunityLineItem_Description}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OpportunityLineItem_Id/OpportunityLineItem_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>OpportunityLineItem.OpportunityLineItem_Id/OpportunityLineItem_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>OpportunityLineItem_IsDeleted/OpportunityLineItem_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>OpportunityLineItem_LastModifiedDate/OpportunityLineItem_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>OpportunityLineItem_ListPrice/OpportunityLineItem_ListPrice',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OpportunityLineItem_Name/OpportunityLineItem_Name',type:'sap.ui.model.type.String'}" linkText="{i18n>OpportunityLineItem.OpportunityLineItem_Name/OpportunityLineItem_Name}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OpportunityLineItem_ProductCode/OpportunityLineItem_ProductCode',type:'sap.ui.model.type.String'}" linkText="{i18n>OpportunityLineItem.OpportunityLineItem_ProductCode/OpportunityLineItem_ProductCode}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>OpportunityLineItem_Quantity/OpportunityLineItem_Quantity',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>OpportunityLineItem_ServiceDate/OpportunityLineItem_ServiceDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>OpportunityLineItem_SortOrder/OpportunityLineItem_SortOrder',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>OpportunityLineItem_SystemModstamp/OpportunityLineItem_SystemModstamp}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>OpportunityLineItem_TotalPrice/OpportunityLineItem_TotalPrice',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>OpportunityLineItem_UnitPrice/OpportunityLineItem_UnitPrice',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>