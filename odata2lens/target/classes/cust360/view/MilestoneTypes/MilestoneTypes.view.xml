<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>MilestoneTypes.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/MilestoneType' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>MilestoneTypes.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MilestoneTypes.MilestoneType_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MilestoneTypes.MilestoneType_Description}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MilestoneTypes.MilestoneType_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MilestoneTypes.MilestoneType_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MilestoneTypes.MilestoneType_Name}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MilestoneTypes.MilestoneType_RecurrenceType}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MilestoneTypes.MilestoneType_SystemModstamp}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="MilestoneType"/>
							<VBox>					
							<Text text="{dataModel>MilestoneType_CreatedDate/MilestoneType_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>MilestoneType_Description/MilestoneType_Description',type:'sap.ui.model.type.String'}" linkText="{i18n>MilestoneType.MilestoneType_Description/MilestoneType_Description}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>MilestoneType_Id/MilestoneType_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>MilestoneType.MilestoneType_Id/MilestoneType_Id}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>MilestoneType_LastModifiedDate/MilestoneType_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>MilestoneType_Name/MilestoneType_Name',type:'sap.ui.model.type.String'}" linkText="{i18n>MilestoneType.MilestoneType_Name/MilestoneType_Name}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>MilestoneType_RecurrenceType/MilestoneType_RecurrenceType',type:'sap.ui.model.type.String'}" linkText="{i18n>MilestoneType.MilestoneType_RecurrenceType/MilestoneType_RecurrenceType}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>MilestoneType_SystemModstamp/MilestoneType_SystemModstamp}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>