<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>ForecastingAdjustments.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/ForecastingAdjustment' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>ForecastingAdjustments.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingAdjustments.ForecastingAdjustment_AdjustedAmount}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingAdjustments.ForecastingAdjustment_AdjustedQuantity}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingAdjustments.ForecastingAdjustment_AdjustmentNote}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingAdjustments.ForecastingAdjustment_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingAdjustments.ForecastingAdjustment_ForecastCategoryName}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingAdjustments.ForecastingAdjustment_ForecastingItemCategory}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingAdjustments.ForecastingAdjustment_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingAdjustments.ForecastingAdjustment_IsAmount}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingAdjustments.ForecastingAdjustment_IsQuantity}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingAdjustments.ForecastingAdjustment_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingAdjustments.ForecastingAdjustment_ProductFamily}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingAdjustments.ForecastingAdjustment_StartDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ForecastingAdjustments.ForecastingAdjustment_SystemModstamp}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="ForecastingAdjustment"/>
							<VBox>					
							<Text text="{path:'dataModel>ForecastingAdjustment_AdjustedAmount/ForecastingAdjustment_AdjustedAmount',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>ForecastingAdjustment_AdjustedQuantity/ForecastingAdjustment_AdjustedQuantity',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ForecastingAdjustment_AdjustmentNote/ForecastingAdjustment_AdjustmentNote',type:'sap.ui.model.type.String'}" linkText="{i18n>ForecastingAdjustment.ForecastingAdjustment_AdjustmentNote/ForecastingAdjustment_AdjustmentNote}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>ForecastingAdjustment_CreatedDate/ForecastingAdjustment_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ForecastingAdjustment_ForecastCategoryName/ForecastingAdjustment_ForecastCategoryName',type:'sap.ui.model.type.String'}" linkText="{i18n>ForecastingAdjustment.ForecastingAdjustment_ForecastCategoryName/ForecastingAdjustment_ForecastCategoryName}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ForecastingAdjustment_ForecastingItemCategory/ForecastingAdjustment_ForecastingItemCategory',type:'sap.ui.model.type.String'}" linkText="{i18n>ForecastingAdjustment.ForecastingAdjustment_ForecastingItemCategory/ForecastingAdjustment_ForecastingItemCategory}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ForecastingAdjustment_Id/ForecastingAdjustment_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>ForecastingAdjustment.ForecastingAdjustment_Id/ForecastingAdjustment_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>ForecastingAdjustment_IsAmount/ForecastingAdjustment_IsAmount',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>ForecastingAdjustment_IsQuantity/ForecastingAdjustment_IsQuantity',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>ForecastingAdjustment_LastModifiedDate/ForecastingAdjustment_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ForecastingAdjustment_ProductFamily/ForecastingAdjustment_ProductFamily',type:'sap.ui.model.type.String'}" linkText="{i18n>ForecastingAdjustment.ForecastingAdjustment_ProductFamily/ForecastingAdjustment_ProductFamily}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>ForecastingAdjustment_StartDate/ForecastingAdjustment_StartDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>ForecastingAdjustment_SystemModstamp/ForecastingAdjustment_SystemModstamp}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>