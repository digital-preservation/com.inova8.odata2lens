<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>ProcessInstanceWorkitems.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/ProcessInstanceWorkitem' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>ProcessInstanceWorkitems.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceWorkitems.ProcessInstanceWorkitem_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceWorkitems.ProcessInstanceWorkitem_ElapsedTimeInDays}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceWorkitems.ProcessInstanceWorkitem_ElapsedTimeInHours}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceWorkitems.ProcessInstanceWorkitem_ElapsedTimeInMinutes}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceWorkitems.ProcessInstanceWorkitem_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceWorkitems.ProcessInstanceWorkitem_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstanceWorkitems.ProcessInstanceWorkitem_SystemModstamp}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="ProcessInstanceWorkitem"/>
							<VBox>					
							<Text text="{dataModel>ProcessInstanceWorkitem_CreatedDate/ProcessInstanceWorkitem_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>ProcessInstanceWorkitem_ElapsedTimeInDays/ProcessInstanceWorkitem_ElapsedTimeInDays',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>ProcessInstanceWorkitem_ElapsedTimeInHours/ProcessInstanceWorkitem_ElapsedTimeInHours',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>ProcessInstanceWorkitem_ElapsedTimeInMinutes/ProcessInstanceWorkitem_ElapsedTimeInMinutes',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ProcessInstanceWorkitem_Id/ProcessInstanceWorkitem_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>ProcessInstanceWorkitem.ProcessInstanceWorkitem_Id/ProcessInstanceWorkitem_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>ProcessInstanceWorkitem_IsDeleted/ProcessInstanceWorkitem_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>ProcessInstanceWorkitem_SystemModstamp/ProcessInstanceWorkitem_SystemModstamp}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>