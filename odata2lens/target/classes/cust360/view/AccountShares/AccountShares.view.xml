<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>AccountShares.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/AccountShare' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>AccountShares.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AccountShares.AccountShare_AccountAccessLevel}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AccountShares.AccountShare_CaseAccessLevel}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AccountShares.AccountShare_ContactAccessLevel}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AccountShares.AccountShare_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AccountShares.AccountShare_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AccountShares.AccountShare_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AccountShares.AccountShare_OpportunityAccessLevel}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AccountShares.AccountShare_RowCause}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="AccountShare"/>
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AccountShare_AccountAccessLevel/AccountShare_AccountAccessLevel',type:'sap.ui.model.type.String'}" linkText="{i18n>AccountShare.AccountShare_AccountAccessLevel/AccountShare_AccountAccessLevel}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AccountShare_CaseAccessLevel/AccountShare_CaseAccessLevel',type:'sap.ui.model.type.String'}" linkText="{i18n>AccountShare.AccountShare_CaseAccessLevel/AccountShare_CaseAccessLevel}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AccountShare_ContactAccessLevel/AccountShare_ContactAccessLevel',type:'sap.ui.model.type.String'}" linkText="{i18n>AccountShare.AccountShare_ContactAccessLevel/AccountShare_ContactAccessLevel}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AccountShare_Id/AccountShare_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>AccountShare.AccountShare_Id/AccountShare_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>AccountShare_IsDeleted/AccountShare_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>AccountShare_LastModifiedDate/AccountShare_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AccountShare_OpportunityAccessLevel/AccountShare_OpportunityAccessLevel',type:'sap.ui.model.type.String'}" linkText="{i18n>AccountShare.AccountShare_OpportunityAccessLevel/AccountShare_OpportunityAccessLevel}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AccountShare_RowCause/AccountShare_RowCause',type:'sap.ui.model.type.String'}" linkText="{i18n>AccountShare.AccountShare_RowCause/AccountShare_RowCause}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>