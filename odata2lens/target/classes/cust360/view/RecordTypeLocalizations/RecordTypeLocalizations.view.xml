<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>RecordTypeLocalizations.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/RecordTypeLocalization' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>RecordTypeLocalizations.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>RecordTypeLocalizations.RecordTypeLocalization_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>RecordTypeLocalizations.RecordTypeLocalization_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>RecordTypeLocalizations.RecordTypeLocalization_Language}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>RecordTypeLocalizations.RecordTypeLocalization_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>RecordTypeLocalizations.RecordTypeLocalization_NamespacePrefix}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>RecordTypeLocalizations.RecordTypeLocalization_SystemModstamp}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>RecordTypeLocalizations.RecordTypeLocalization_Value}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="RecordTypeLocalization"/>
							<VBox>					
							<Text text="{dataModel>RecordTypeLocalization_CreatedDate/RecordTypeLocalization_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>RecordTypeLocalization_Id/RecordTypeLocalization_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>RecordTypeLocalization.RecordTypeLocalization_Id/RecordTypeLocalization_Id}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>RecordTypeLocalization_Language/RecordTypeLocalization_Language',type:'sap.ui.model.type.String'}" linkText="{i18n>RecordTypeLocalization.RecordTypeLocalization_Language/RecordTypeLocalization_Language}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>RecordTypeLocalization_LastModifiedDate/RecordTypeLocalization_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>RecordTypeLocalization_NamespacePrefix/RecordTypeLocalization_NamespacePrefix',type:'sap.ui.model.type.String'}" linkText="{i18n>RecordTypeLocalization.RecordTypeLocalization_NamespacePrefix/RecordTypeLocalization_NamespacePrefix}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>RecordTypeLocalization_SystemModstamp/RecordTypeLocalization_SystemModstamp}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>RecordTypeLocalization_Value/RecordTypeLocalization_Value',type:'sap.ui.model.type.String'}" linkText="{i18n>RecordTypeLocalization.RecordTypeLocalization_Value/RecordTypeLocalization_Value}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>