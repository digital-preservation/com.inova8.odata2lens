<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>AsyncApexJobs.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/AsyncApexJob' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>AsyncApexJobs.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AsyncApexJobs.AsyncApexJob_CompletedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AsyncApexJobs.AsyncApexJob_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AsyncApexJobs.AsyncApexJob_ExtendedStatus}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AsyncApexJobs.AsyncApexJob_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AsyncApexJobs.AsyncApexJob_JobItemsProcessed}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AsyncApexJobs.AsyncApexJob_JobType}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AsyncApexJobs.AsyncApexJob_LastProcessed}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AsyncApexJobs.AsyncApexJob_LastProcessedOffset}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AsyncApexJobs.AsyncApexJob_MethodName}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AsyncApexJobs.AsyncApexJob_NumberOfErrors}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AsyncApexJobs.AsyncApexJob_Status}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AsyncApexJobs.AsyncApexJob_TotalJobItems}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="AsyncApexJob"/>
							<VBox>					
							<Text text="{dataModel>AsyncApexJob_CompletedDate/AsyncApexJob_CompletedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>AsyncApexJob_CreatedDate/AsyncApexJob_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AsyncApexJob_ExtendedStatus/AsyncApexJob_ExtendedStatus',type:'sap.ui.model.type.String'}" linkText="{i18n>AsyncApexJob.AsyncApexJob_ExtendedStatus/AsyncApexJob_ExtendedStatus}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AsyncApexJob_Id/AsyncApexJob_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>AsyncApexJob.AsyncApexJob_Id/AsyncApexJob_Id}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>AsyncApexJob_JobItemsProcessed/AsyncApexJob_JobItemsProcessed',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AsyncApexJob_JobType/AsyncApexJob_JobType',type:'sap.ui.model.type.String'}" linkText="{i18n>AsyncApexJob.AsyncApexJob_JobType/AsyncApexJob_JobType}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AsyncApexJob_LastProcessed/AsyncApexJob_LastProcessed',type:'sap.ui.model.type.String'}" linkText="{i18n>AsyncApexJob.AsyncApexJob_LastProcessed/AsyncApexJob_LastProcessed}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>AsyncApexJob_LastProcessedOffset/AsyncApexJob_LastProcessedOffset',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AsyncApexJob_MethodName/AsyncApexJob_MethodName',type:'sap.ui.model.type.String'}" linkText="{i18n>AsyncApexJob.AsyncApexJob_MethodName/AsyncApexJob_MethodName}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>AsyncApexJob_NumberOfErrors/AsyncApexJob_NumberOfErrors',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AsyncApexJob_Status/AsyncApexJob_Status',type:'sap.ui.model.type.String'}" linkText="{i18n>AsyncApexJob.AsyncApexJob_Status/AsyncApexJob_Status}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>AsyncApexJob_TotalJobItems/AsyncApexJob_TotalJobItems',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>