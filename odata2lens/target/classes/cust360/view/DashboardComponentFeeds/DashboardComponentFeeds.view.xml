<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>DashboardComponentFeeds.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/DashboardComponentFeed' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>DashboardComponentFeeds.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>DashboardComponentFeeds.DashboardComponentFeed_Body}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>DashboardComponentFeeds.DashboardComponentFeed_CommentCount}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>DashboardComponentFeeds.DashboardComponentFeed_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>DashboardComponentFeeds.DashboardComponentFeed_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>DashboardComponentFeeds.DashboardComponentFeed_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>DashboardComponentFeeds.DashboardComponentFeed_IsRichText}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>DashboardComponentFeeds.DashboardComponentFeed_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>DashboardComponentFeeds.DashboardComponentFeed_LikeCount}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>DashboardComponentFeeds.DashboardComponentFeed_LinkUrl}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>DashboardComponentFeeds.DashboardComponentFeed_SystemModstamp}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>DashboardComponentFeeds.DashboardComponentFeed_Title}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>DashboardComponentFeeds.DashboardComponentFeed_Type}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="DashboardComponentFeed"/>
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>DashboardComponentFeed_Body/DashboardComponentFeed_Body',type:'sap.ui.model.type.String'}" linkText="{i18n>DashboardComponentFeed.DashboardComponentFeed_Body/DashboardComponentFeed_Body}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>DashboardComponentFeed_CommentCount/DashboardComponentFeed_CommentCount',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>DashboardComponentFeed_CreatedDate/DashboardComponentFeed_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>DashboardComponentFeed_Id/DashboardComponentFeed_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>DashboardComponentFeed.DashboardComponentFeed_Id/DashboardComponentFeed_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>DashboardComponentFeed_IsDeleted/DashboardComponentFeed_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>DashboardComponentFeed_IsRichText/DashboardComponentFeed_IsRichText',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>DashboardComponentFeed_LastModifiedDate/DashboardComponentFeed_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>DashboardComponentFeed_LikeCount/DashboardComponentFeed_LikeCount',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>DashboardComponentFeed_LinkUrl/DashboardComponentFeed_LinkUrl',type:'sap.ui.model.type.String'}" linkText="{i18n>DashboardComponentFeed.DashboardComponentFeed_LinkUrl/DashboardComponentFeed_LinkUrl}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>DashboardComponentFeed_SystemModstamp/DashboardComponentFeed_SystemModstamp}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>DashboardComponentFeed_Title/DashboardComponentFeed_Title',type:'sap.ui.model.type.String'}" linkText="{i18n>DashboardComponentFeed.DashboardComponentFeed_Title/DashboardComponentFeed_Title}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>DashboardComponentFeed_Type/DashboardComponentFeed_Type',type:'sap.ui.model.type.String'}" linkText="{i18n>DashboardComponentFeed.DashboardComponentFeed_Type/DashboardComponentFeed_Type}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>