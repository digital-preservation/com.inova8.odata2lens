<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>IdeaComments.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/IdeaComment' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>IdeaComments.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>IdeaComments.IdeaComment_CommentBody}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>IdeaComments.IdeaComment_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>IdeaComments.IdeaComment_CreatorFullPhotoUrl}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>IdeaComments.IdeaComment_CreatorName}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>IdeaComments.IdeaComment_CreatorSmallPhotoUrl}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>IdeaComments.IdeaComment_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>IdeaComments.IdeaComment_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>IdeaComments.IdeaComment_IsHtml}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>IdeaComments.IdeaComment_SystemModstamp}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>IdeaComments.IdeaComment_UpVotes}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="IdeaComment"/>
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>IdeaComment_CommentBody/IdeaComment_CommentBody',type:'sap.ui.model.type.String'}" linkText="{i18n>IdeaComment.IdeaComment_CommentBody/IdeaComment_CommentBody}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>IdeaComment_CreatedDate/IdeaComment_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>IdeaComment_CreatorFullPhotoUrl/IdeaComment_CreatorFullPhotoUrl',type:'sap.ui.model.type.String'}" linkText="{i18n>IdeaComment.IdeaComment_CreatorFullPhotoUrl/IdeaComment_CreatorFullPhotoUrl}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>IdeaComment_CreatorName/IdeaComment_CreatorName',type:'sap.ui.model.type.String'}" linkText="{i18n>IdeaComment.IdeaComment_CreatorName/IdeaComment_CreatorName}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>IdeaComment_CreatorSmallPhotoUrl/IdeaComment_CreatorSmallPhotoUrl',type:'sap.ui.model.type.String'}" linkText="{i18n>IdeaComment.IdeaComment_CreatorSmallPhotoUrl/IdeaComment_CreatorSmallPhotoUrl}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>IdeaComment_Id/IdeaComment_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>IdeaComment.IdeaComment_Id/IdeaComment_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>IdeaComment_IsDeleted/IdeaComment_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>IdeaComment_IsHtml/IdeaComment_IsHtml',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>IdeaComment_SystemModstamp/IdeaComment_SystemModstamp}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>IdeaComment_UpVotes/IdeaComment_UpVotes',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>