<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>ContentDocumentLinks.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/ContentDocumentLink' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>ContentDocumentLinks.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ContentDocumentLinks.ContentDocumentLink_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ContentDocumentLinks.ContentDocumentLink_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ContentDocumentLinks.ContentDocumentLink_ShareType}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ContentDocumentLinks.ContentDocumentLink_SystemModstamp}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ContentDocumentLinks.ContentDocumentLink_Visibility}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="ContentDocumentLink"/>
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ContentDocumentLink_Id/ContentDocumentLink_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>ContentDocumentLink.ContentDocumentLink_Id/ContentDocumentLink_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>ContentDocumentLink_IsDeleted/ContentDocumentLink_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ContentDocumentLink_ShareType/ContentDocumentLink_ShareType',type:'sap.ui.model.type.String'}" linkText="{i18n>ContentDocumentLink.ContentDocumentLink_ShareType/ContentDocumentLink_ShareType}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>ContentDocumentLink_SystemModstamp/ContentDocumentLink_SystemModstamp}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ContentDocumentLink_Visibility/ContentDocumentLink_Visibility',type:'sap.ui.model.type.String'}" linkText="{i18n>ContentDocumentLink.ContentDocumentLink_Visibility/ContentDocumentLink_Visibility}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>