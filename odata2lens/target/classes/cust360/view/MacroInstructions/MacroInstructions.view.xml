<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>MacroInstructions.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/MacroInstruction' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>MacroInstructions.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MacroInstructions.MacroInstruction_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MacroInstructions.MacroInstruction_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MacroInstructions.MacroInstruction_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MacroInstructions.MacroInstruction_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MacroInstructions.MacroInstruction_Name}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MacroInstructions.MacroInstruction_Operation}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MacroInstructions.MacroInstruction_SortOrder}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MacroInstructions.MacroInstruction_SystemModstamp}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MacroInstructions.MacroInstruction_Target}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MacroInstructions.MacroInstruction_Value}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MacroInstructions.MacroInstruction_ValueRecord}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="MacroInstruction"/>
							<VBox>					
							<Text text="{dataModel>MacroInstruction_CreatedDate/MacroInstruction_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>MacroInstruction_Id/MacroInstruction_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>MacroInstruction.MacroInstruction_Id/MacroInstruction_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>MacroInstruction_IsDeleted/MacroInstruction_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>MacroInstruction_LastModifiedDate/MacroInstruction_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>MacroInstruction_Name/MacroInstruction_Name',type:'sap.ui.model.type.String'}" linkText="{i18n>MacroInstruction.MacroInstruction_Name/MacroInstruction_Name}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>MacroInstruction_Operation/MacroInstruction_Operation',type:'sap.ui.model.type.String'}" linkText="{i18n>MacroInstruction.MacroInstruction_Operation/MacroInstruction_Operation}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>MacroInstruction_SortOrder/MacroInstruction_SortOrder',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>MacroInstruction_SystemModstamp/MacroInstruction_SystemModstamp}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>MacroInstruction_Target/MacroInstruction_Target',type:'sap.ui.model.type.String'}" linkText="{i18n>MacroInstruction.MacroInstruction_Target/MacroInstruction_Target}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>MacroInstruction_Value/MacroInstruction_Value',type:'sap.ui.model.type.String'}" linkText="{i18n>MacroInstruction.MacroInstruction_Value/MacroInstruction_Value}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>MacroInstruction_ValueRecord/MacroInstruction_ValueRecord',type:'sap.ui.model.type.String'}" linkText="{i18n>MacroInstruction.MacroInstruction_ValueRecord/MacroInstruction_ValueRecord}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>