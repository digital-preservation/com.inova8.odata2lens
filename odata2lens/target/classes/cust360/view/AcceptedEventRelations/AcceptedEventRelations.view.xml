<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>AcceptedEventRelations.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/AcceptedEventRelation' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>AcceptedEventRelations.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AcceptedEventRelations.AcceptedEventRelation_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AcceptedEventRelations.AcceptedEventRelation_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AcceptedEventRelations.AcceptedEventRelation_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AcceptedEventRelations.AcceptedEventRelation_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AcceptedEventRelations.AcceptedEventRelation_RespondedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AcceptedEventRelations.AcceptedEventRelation_Response}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AcceptedEventRelations.AcceptedEventRelation_SystemModstamp}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AcceptedEventRelations.AcceptedEventRelation_Type}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="AcceptedEventRelation"/>
							<VBox>					
							<Text text="{dataModel>AcceptedEventRelation_CreatedDate/AcceptedEventRelation_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AcceptedEventRelation_Id/AcceptedEventRelation_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>AcceptedEventRelation.AcceptedEventRelation_Id/AcceptedEventRelation_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>AcceptedEventRelation_IsDeleted/AcceptedEventRelation_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>AcceptedEventRelation_LastModifiedDate/AcceptedEventRelation_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>AcceptedEventRelation_RespondedDate/AcceptedEventRelation_RespondedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AcceptedEventRelation_Response/AcceptedEventRelation_Response',type:'sap.ui.model.type.String'}" linkText="{i18n>AcceptedEventRelation.AcceptedEventRelation_Response/AcceptedEventRelation_Response}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>AcceptedEventRelation_SystemModstamp/AcceptedEventRelation_SystemModstamp}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AcceptedEventRelation_Type/AcceptedEventRelation_Type',type:'sap.ui.model.type.String'}" linkText="{i18n>AcceptedEventRelation.AcceptedEventRelation_Type/AcceptedEventRelation_Type}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>