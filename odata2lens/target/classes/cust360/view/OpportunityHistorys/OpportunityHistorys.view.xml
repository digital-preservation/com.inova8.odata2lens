<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>OpportunityHistorys.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/OpportunityHistory' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>OpportunityHistorys.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityHistorys.OpportunityHistory_Amount}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityHistorys.OpportunityHistory_CloseDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityHistorys.OpportunityHistory_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityHistorys.OpportunityHistory_ExpectedRevenue}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityHistorys.OpportunityHistory_ForecastCategory}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityHistorys.OpportunityHistory_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityHistorys.OpportunityHistory_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityHistorys.OpportunityHistory_Probability}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityHistorys.OpportunityHistory_StageName}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OpportunityHistorys.OpportunityHistory_SystemModstamp}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="OpportunityHistory"/>
							<VBox>					
							<Text text="{path:'dataModel>OpportunityHistory_Amount/OpportunityHistory_Amount',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>OpportunityHistory_CloseDate/OpportunityHistory_CloseDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>OpportunityHistory_CreatedDate/OpportunityHistory_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>OpportunityHistory_ExpectedRevenue/OpportunityHistory_ExpectedRevenue',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OpportunityHistory_ForecastCategory/OpportunityHistory_ForecastCategory',type:'sap.ui.model.type.String'}" linkText="{i18n>OpportunityHistory.OpportunityHistory_ForecastCategory/OpportunityHistory_ForecastCategory}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OpportunityHistory_Id/OpportunityHistory_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>OpportunityHistory.OpportunityHistory_Id/OpportunityHistory_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>OpportunityHistory_IsDeleted/OpportunityHistory_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>OpportunityHistory_Probability/OpportunityHistory_Probability',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OpportunityHistory_StageName/OpportunityHistory_StageName',type:'sap.ui.model.type.String'}" linkText="{i18n>OpportunityHistory.OpportunityHistory_StageName/OpportunityHistory_StageName}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>OpportunityHistory_SystemModstamp/OpportunityHistory_SystemModstamp}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>