<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>OutOfOffices.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/OutOfOffice' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>OutOfOffices.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutOfOffices.OutOfOffice_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutOfOffices.OutOfOffice_EndDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutOfOffices.OutOfOffice_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutOfOffices.OutOfOffice_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutOfOffices.OutOfOffice_IsEnabled}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutOfOffices.OutOfOffice_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutOfOffices.OutOfOffice_Message}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutOfOffices.OutOfOffice_StartDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutOfOffices.OutOfOffice_SystemModstamp}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="OutOfOffice"/>
							<VBox>					
							<Text text="{dataModel>OutOfOffice_CreatedDate/OutOfOffice_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>OutOfOffice_EndDate/OutOfOffice_EndDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OutOfOffice_Id/OutOfOffice_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>OutOfOffice.OutOfOffice_Id/OutOfOffice_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>OutOfOffice_IsDeleted/OutOfOffice_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>OutOfOffice_IsEnabled/OutOfOffice_IsEnabled',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>OutOfOffice_LastModifiedDate/OutOfOffice_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OutOfOffice_Message/OutOfOffice_Message',type:'sap.ui.model.type.String'}" linkText="{i18n>OutOfOffice.OutOfOffice_Message/OutOfOffice_Message}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>OutOfOffice_StartDate/OutOfOffice_StartDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>OutOfOffice_SystemModstamp/OutOfOffice_SystemModstamp}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>