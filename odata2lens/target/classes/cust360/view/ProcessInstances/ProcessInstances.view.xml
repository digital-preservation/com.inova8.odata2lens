<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>ProcessInstances.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/ProcessInstance' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>ProcessInstances.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstances.ProcessInstance_CompletedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstances.ProcessInstance_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstances.ProcessInstance_ElapsedTimeInDays}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstances.ProcessInstance_ElapsedTimeInHours}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstances.ProcessInstance_ElapsedTimeInMinutes}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstances.ProcessInstance_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstances.ProcessInstance_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstances.ProcessInstance_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstances.ProcessInstance_Status}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>ProcessInstances.ProcessInstance_SystemModstamp}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="ProcessInstance"/>
							<VBox>					
							<Text text="{dataModel>ProcessInstance_CompletedDate/ProcessInstance_CompletedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>ProcessInstance_CreatedDate/ProcessInstance_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>ProcessInstance_ElapsedTimeInDays/ProcessInstance_ElapsedTimeInDays',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>ProcessInstance_ElapsedTimeInHours/ProcessInstance_ElapsedTimeInHours',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>ProcessInstance_ElapsedTimeInMinutes/ProcessInstance_ElapsedTimeInMinutes',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ProcessInstance_Id/ProcessInstance_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>ProcessInstance.ProcessInstance_Id/ProcessInstance_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>ProcessInstance_IsDeleted/ProcessInstance_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>ProcessInstance_LastModifiedDate/ProcessInstance_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>ProcessInstance_Status/ProcessInstance_Status',type:'sap.ui.model.type.String'}" linkText="{i18n>ProcessInstance.ProcessInstance_Status/ProcessInstance_Status}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>ProcessInstance_SystemModstamp/ProcessInstance_SystemModstamp}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>