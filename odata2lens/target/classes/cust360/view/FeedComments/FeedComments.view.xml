<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>FeedComments.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/FeedComment' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>FeedComments.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>FeedComments.FeedComment_CommentBody}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>FeedComments.FeedComment_CommentType}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>FeedComments.FeedComment_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>FeedComments.FeedComment_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>FeedComments.FeedComment_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>FeedComments.FeedComment_IsRichText}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>FeedComments.FeedComment_IsVerified}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>FeedComments.FeedComment_LastEditDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>FeedComments.FeedComment_Revision}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>FeedComments.FeedComment_Status}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>FeedComments.FeedComment_SystemModstamp}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="FeedComment"/>
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>FeedComment_CommentBody/FeedComment_CommentBody',type:'sap.ui.model.type.String'}" linkText="{i18n>FeedComment.FeedComment_CommentBody/FeedComment_CommentBody}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>FeedComment_CommentType/FeedComment_CommentType',type:'sap.ui.model.type.String'}" linkText="{i18n>FeedComment.FeedComment_CommentType/FeedComment_CommentType}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>FeedComment_CreatedDate/FeedComment_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>FeedComment_Id/FeedComment_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>FeedComment.FeedComment_Id/FeedComment_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>FeedComment_IsDeleted/FeedComment_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>FeedComment_IsRichText/FeedComment_IsRichText',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>FeedComment_IsVerified/FeedComment_IsVerified',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>FeedComment_LastEditDate/FeedComment_LastEditDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>FeedComment_Revision/FeedComment_Revision',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>FeedComment_Status/FeedComment_Status',type:'sap.ui.model.type.String'}" linkText="{i18n>FeedComment.FeedComment_Status/FeedComment_Status}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>FeedComment_SystemModstamp/FeedComment_SystemModstamp}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>