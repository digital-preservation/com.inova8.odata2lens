<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>EntitlementFeeds.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/EntitlementFeed' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>EntitlementFeeds.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementFeeds.EntitlementFeed_Body}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementFeeds.EntitlementFeed_CommentCount}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementFeeds.EntitlementFeed_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementFeeds.EntitlementFeed_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementFeeds.EntitlementFeed_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementFeeds.EntitlementFeed_IsRichText}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementFeeds.EntitlementFeed_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementFeeds.EntitlementFeed_LikeCount}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementFeeds.EntitlementFeed_LinkUrl}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementFeeds.EntitlementFeed_SystemModstamp}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementFeeds.EntitlementFeed_Title}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>EntitlementFeeds.EntitlementFeed_Type}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="EntitlementFeed"/>
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>EntitlementFeed_Body/EntitlementFeed_Body',type:'sap.ui.model.type.String'}" linkText="{i18n>EntitlementFeed.EntitlementFeed_Body/EntitlementFeed_Body}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>EntitlementFeed_CommentCount/EntitlementFeed_CommentCount',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>EntitlementFeed_CreatedDate/EntitlementFeed_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>EntitlementFeed_Id/EntitlementFeed_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>EntitlementFeed.EntitlementFeed_Id/EntitlementFeed_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>EntitlementFeed_IsDeleted/EntitlementFeed_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>EntitlementFeed_IsRichText/EntitlementFeed_IsRichText',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>EntitlementFeed_LastModifiedDate/EntitlementFeed_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>EntitlementFeed_LikeCount/EntitlementFeed_LikeCount',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>EntitlementFeed_LinkUrl/EntitlementFeed_LinkUrl',type:'sap.ui.model.type.String'}" linkText="{i18n>EntitlementFeed.EntitlementFeed_LinkUrl/EntitlementFeed_LinkUrl}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>EntitlementFeed_SystemModstamp/EntitlementFeed_SystemModstamp}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>EntitlementFeed_Title/EntitlementFeed_Title',type:'sap.ui.model.type.String'}" linkText="{i18n>EntitlementFeed.EntitlementFeed_Title/EntitlementFeed_Title}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>EntitlementFeed_Type/EntitlementFeed_Type',type:'sap.ui.model.type.String'}" linkText="{i18n>EntitlementFeed.EntitlementFeed_Type/EntitlementFeed_Type}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>