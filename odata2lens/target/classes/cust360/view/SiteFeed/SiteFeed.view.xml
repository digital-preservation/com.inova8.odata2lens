				<Column visible="true">
				</Column>
				<Column visible="true">
					<Text text="SiteFeed"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>SiteFeed.SiteFeed_Body}" required="false"/> 
						<Text text=""/>
