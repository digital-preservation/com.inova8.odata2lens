<mvc:View controllerName="com.inova8.lens.controller.Entity360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:table="sap.ui.table" xmlns:rdf="com.inova8.lens.control" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core">
	<Page showHeader="true" id="page" navButtonPress="onNavBack" showNavButton="false" title="{i18n>OpportunityShare.Title}" busy="{entityView>/busy}"
		busyIndicatorDelay="{entityView>/delay}" >
		<customHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<HBox id="sourceTitle" alignItems="Center">
						<rdf:TextResource id="selectedResource" path="" entitySet=""/>
				</HBox>	
				<Title id="pathTitle" text="{entityView>/navigation}"/>
				<HBox id="versionsTitle" alignItems="Center">
					<Title text="(" required="false"/>
					<ComboBox id="versionSelection" items="{ path: 'entityView>/versions' }" selectionChange="onVersionChange">
						<core:Item key="{entityView>navigation}" text="{entityView>text}"/>
					</ComboBox>
					<Title text=")" required="false"/>
				</HBox>
				<Title text="{i18n>OpportunityShare.this}"/>
				<Title text="(" required="false"/>
				<rdf:TextResource path="dataModel>" entitySet="OpportunityShare"/>
				<Title text=")" required="false"/>
	
				<ToolbarSpacer/>
				<ToggleButton id="toggleColumns" icon="sap-icon://hide" activeIcon="sap-icon://show" press="onSettingsPressed" visible="false"	>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</ToggleButton>
				
			</Toolbar>
		</customHeader>
		<Table id="form360" inset="false" fixedLayout="true" class="multicolumnform" updateFinished="hideColumns">
			<columns>
				<Column hAlign="Right" width="200px">
					<Text text=""/>
				</Column>
				<Column visible="true">
				</Column>
				<Column visible="true">
					<Text text="OpportunityShare"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OpportunityShare.OpportunityShare_Id}" required="false"/> 
						<Text text=""/>
						<rdf:TextLink text="{path:'dataModel>OpportunityShare_Id/OpportunityShare_Id',type:'sap.ui.model.type.String' }" linkText="{i18n>OpportunityShare.OpportunityShare_Id/OpportunityShare_Id}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OpportunityShare.OpportunityShare_IsDeleted}" required="false"/> 
						<Text text=""/>
						<Text text="{path:'dataModel>OpportunityShare_IsDeleted/OpportunityShare_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OpportunityShare.OpportunityShare_LastModifiedById}" required="false"/> 
						<Text text=""/>
						<rdf:ListResource path="dataModel>OpportunityShare_LastModifiedById/sfdc_OpportunityShare_LastModifiedById" entitySet="User"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OpportunityShare.OpportunityShare_LastModifiedDate}" required="false"/> 
						<Text text=""/>
						<Text text="{dataModel>OpportunityShare_LastModifiedDate/OpportunityShare_LastModifiedDate}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OpportunityShare.OpportunityShare_OpportunityAccessLevel}" required="false"/> 
						<Text text=""/>
						<rdf:TextLink text="{path:'dataModel>OpportunityShare_OpportunityAccessLevel/OpportunityShare_OpportunityAccessLevel',type:'sap.ui.model.type.String' }" linkText="{i18n>OpportunityShare.OpportunityShare_OpportunityAccessLevel/OpportunityShare_OpportunityAccessLevel}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OpportunityShare.OpportunityShare_OpportunityId}" required="false"/> 
						<Text text=""/>
						<rdf:ListResource path="dataModel>OpportunityShare_OpportunityId/sfdc_OpportunityShare_OpportunityId" entitySet="Opportunity"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OpportunityShare.OpportunityShare_RowCause}" required="false"/> 
						<Text text=""/>
						<rdf:TextLink text="{path:'dataModel>OpportunityShare_RowCause/OpportunityShare_RowCause',type:'sap.ui.model.type.String' }" linkText="{i18n>OpportunityShare.OpportunityShare_RowCause/OpportunityShare_RowCause}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OpportunityShare.OpportunityShare_UserOrGroupId}" required="false"/> 
						<Text text=""/>
						<rdf:ListResource path="dataModel>OpportunityShare_UserOrGroupId/sfdc_OpportunityShare_UserOrGroupId" entitySet="Group"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OpportunityShare.OpportunityShare_LastModifiedById}" required="false"/> 
						<rdf:ListResource path="dataModel>OpportunityShare_LastModifiedById" entitySet="User"/>
						<Text text=""/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OpportunityShare.OpportunityShare_OpportunityId}" required="false"/> 
						<rdf:ListResource path="dataModel>OpportunityShare_OpportunityId" entitySet="Opportunity"/>
						<Text text=""/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OpportunityShare.OpportunityShare_UserOrGroupId}" required="false"/> 
						<rdf:ListResource path="dataModel>OpportunityShare_UserOrGroupId" entitySet="Group"/>
						<Text text=""/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</mvc:View>