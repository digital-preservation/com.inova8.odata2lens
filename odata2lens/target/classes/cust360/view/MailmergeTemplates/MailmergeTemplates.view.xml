<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>MailmergeTemplates.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/MailmergeTemplate' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>MailmergeTemplates.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MailmergeTemplates.MailmergeTemplate_Body}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MailmergeTemplates.MailmergeTemplate_BodyLength}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MailmergeTemplates.MailmergeTemplate_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MailmergeTemplates.MailmergeTemplate_Description}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MailmergeTemplates.MailmergeTemplate_Filename}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MailmergeTemplates.MailmergeTemplate_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MailmergeTemplates.MailmergeTemplate_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MailmergeTemplates.MailmergeTemplate_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MailmergeTemplates.MailmergeTemplate_LastUsedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MailmergeTemplates.MailmergeTemplate_Name}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MailmergeTemplates.MailmergeTemplate_SecurityOptionsAttachmentHasFlash}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MailmergeTemplates.MailmergeTemplate_SecurityOptionsAttachmentHasXSSThreat}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MailmergeTemplates.MailmergeTemplate_SecurityOptionsAttachmentScannedForXSS}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MailmergeTemplates.MailmergeTemplate_SecurityOptionsAttachmentScannedforFlash}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>MailmergeTemplates.MailmergeTemplate_SystemModstamp}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="MailmergeTemplate"/>
							<VBox>					
								<Text text="{dataModel>MailmergeTemplate_Body/MailmergeTemplate_Body}"/>
							</VBox>							
							<VBox>					
							<Text text="{path:'dataModel>MailmergeTemplate_BodyLength/MailmergeTemplate_BodyLength',type:'sap.ui.model.type.Integer' }"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>MailmergeTemplate_CreatedDate/MailmergeTemplate_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>MailmergeTemplate_Description/MailmergeTemplate_Description',type:'sap.ui.model.type.String'}" linkText="{i18n>MailmergeTemplate.MailmergeTemplate_Description/MailmergeTemplate_Description}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>MailmergeTemplate_Filename/MailmergeTemplate_Filename',type:'sap.ui.model.type.String'}" linkText="{i18n>MailmergeTemplate.MailmergeTemplate_Filename/MailmergeTemplate_Filename}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>MailmergeTemplate_Id/MailmergeTemplate_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>MailmergeTemplate.MailmergeTemplate_Id/MailmergeTemplate_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>MailmergeTemplate_IsDeleted/MailmergeTemplate_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>MailmergeTemplate_LastModifiedDate/MailmergeTemplate_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>MailmergeTemplate_LastUsedDate/MailmergeTemplate_LastUsedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>MailmergeTemplate_Name/MailmergeTemplate_Name',type:'sap.ui.model.type.String'}" linkText="{i18n>MailmergeTemplate.MailmergeTemplate_Name/MailmergeTemplate_Name}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>MailmergeTemplate_SecurityOptionsAttachmentHasFlash/MailmergeTemplate_SecurityOptionsAttachmentHasFlash',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>MailmergeTemplate_SecurityOptionsAttachmentHasXSSThreat/MailmergeTemplate_SecurityOptionsAttachmentHasXSSThreat',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>MailmergeTemplate_SecurityOptionsAttachmentScannedForXSS/MailmergeTemplate_SecurityOptionsAttachmentScannedForXSS',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>MailmergeTemplate_SecurityOptionsAttachmentScannedforFlash/MailmergeTemplate_SecurityOptionsAttachmentScannedforFlash',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>MailmergeTemplate_SystemModstamp/MailmergeTemplate_SystemModstamp}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>