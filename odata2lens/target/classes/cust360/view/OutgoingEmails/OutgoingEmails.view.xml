<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>OutgoingEmails.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/OutgoingEmail' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>OutgoingEmails.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutgoingEmails.OutgoingEmail_BccAddress}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutgoingEmails.OutgoingEmail_CcAddress}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutgoingEmails.OutgoingEmail_ExternalId}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutgoingEmails.OutgoingEmail_HtmlBody}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutgoingEmails.OutgoingEmail_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutgoingEmails.OutgoingEmail_Subject}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutgoingEmails.OutgoingEmail_TextBody}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutgoingEmails.OutgoingEmail_ToAddress}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>OutgoingEmails.OutgoingEmail_ValidatedFromAddress}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="OutgoingEmail"/>
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OutgoingEmail_BccAddress/OutgoingEmail_BccAddress',type:'sap.ui.model.type.String'}" linkText="{i18n>OutgoingEmail.OutgoingEmail_BccAddress/OutgoingEmail_BccAddress}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OutgoingEmail_CcAddress/OutgoingEmail_CcAddress',type:'sap.ui.model.type.String'}" linkText="{i18n>OutgoingEmail.OutgoingEmail_CcAddress/OutgoingEmail_CcAddress}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OutgoingEmail_ExternalId/OutgoingEmail_ExternalId',type:'sap.ui.model.type.String'}" linkText="{i18n>OutgoingEmail.OutgoingEmail_ExternalId/OutgoingEmail_ExternalId}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OutgoingEmail_HtmlBody/OutgoingEmail_HtmlBody',type:'sap.ui.model.type.String'}" linkText="{i18n>OutgoingEmail.OutgoingEmail_HtmlBody/OutgoingEmail_HtmlBody}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OutgoingEmail_Id/OutgoingEmail_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>OutgoingEmail.OutgoingEmail_Id/OutgoingEmail_Id}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OutgoingEmail_Subject/OutgoingEmail_Subject',type:'sap.ui.model.type.String'}" linkText="{i18n>OutgoingEmail.OutgoingEmail_Subject/OutgoingEmail_Subject}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OutgoingEmail_TextBody/OutgoingEmail_TextBody',type:'sap.ui.model.type.String'}" linkText="{i18n>OutgoingEmail.OutgoingEmail_TextBody/OutgoingEmail_TextBody}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OutgoingEmail_ToAddress/OutgoingEmail_ToAddress',type:'sap.ui.model.type.String'}" linkText="{i18n>OutgoingEmail.OutgoingEmail_ToAddress/OutgoingEmail_ToAddress}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>OutgoingEmail_ValidatedFromAddress/OutgoingEmail_ValidatedFromAddress',type:'sap.ui.model.type.String'}" linkText="{i18n>OutgoingEmail.OutgoingEmail_ValidatedFromAddress/OutgoingEmail_ValidatedFromAddress}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>