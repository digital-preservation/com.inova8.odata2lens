<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>AuraDefinitions.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/AuraDefinition' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>AuraDefinitions.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AuraDefinitions.AuraDefinition_CreatedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AuraDefinitions.AuraDefinition_DefType}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AuraDefinitions.AuraDefinition_Format}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AuraDefinitions.AuraDefinition_Id}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AuraDefinitions.AuraDefinition_IsDeleted}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AuraDefinitions.AuraDefinition_LastModifiedDate}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AuraDefinitions.AuraDefinition_Source}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>AuraDefinitions.AuraDefinition_SystemModstamp}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="AuraDefinition"/>
							<VBox>					
							<Text text="{dataModel>AuraDefinition_CreatedDate/AuraDefinition_CreatedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AuraDefinition_DefType/AuraDefinition_DefType',type:'sap.ui.model.type.String'}" linkText="{i18n>AuraDefinition.AuraDefinition_DefType/AuraDefinition_DefType}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AuraDefinition_Format/AuraDefinition_Format',type:'sap.ui.model.type.String'}" linkText="{i18n>AuraDefinition.AuraDefinition_Format/AuraDefinition_Format}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AuraDefinition_Id/AuraDefinition_Id',type:'sap.ui.model.type.String'}" linkText="{i18n>AuraDefinition.AuraDefinition_Id/AuraDefinition_Id}"/>
							</VBox>							
							<VBox>					
								<Text text="{path:'dataModel>AuraDefinition_IsDeleted/AuraDefinition_IsDeleted',type:'sap.ui.model.type.Boolean'}"/>  
							</VBox>							
							<VBox>					
							<Text text="{dataModel>AuraDefinition_LastModifiedDate/AuraDefinition_LastModifiedDate}"/>
							</VBox>							
							<VBox>					
							<rdf:TextLink text="{path:'dataModel>AuraDefinition_Source/AuraDefinition_Source',type:'sap.ui.model.type.String'}" linkText="{i18n>AuraDefinition.AuraDefinition_Source/AuraDefinition_Source}"/>
							</VBox>							
							<VBox>					
							<Text text="{dataModel>AuraDefinition_SystemModstamp/AuraDefinition_SystemModstamp}"/>
							</VBox>							
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>