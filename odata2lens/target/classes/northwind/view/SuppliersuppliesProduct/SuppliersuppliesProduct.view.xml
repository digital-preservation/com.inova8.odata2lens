<mvc:View controllerName="com.inova8.lens.controller.EntityNavigationSet" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="false" title="{i18n>SuppliersuppliesProduct.ViewTitle}">
		<content>
			<Table id="table" inset="false" items="{ path: '/{objectId}/suppliesProduct', sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entityNavigationSetView>/tableNoDataText}" busyIndicatorDelay="{entityNavigationSetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>					
					<ToolbarSpacer/>
						<Title id="entitySet"/>
						<rdf:TextResource id="resourceTitle" />
						<Title id="tableHeader" text="{entityNavigationSetView>/entityNavigationSetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>SuppliersuppliesProduct.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>SuppliersuppliesProduct.categoryNotation}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>SuppliersuppliesProduct.comment}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>SuppliersuppliesProduct.discontinued}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>SuppliersuppliesProduct.productName}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>SuppliersuppliesProduct.productUnitPrice}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>SuppliersuppliesProduct.quantityPerUnit}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>SuppliersuppliesProduct.reorderLevel}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>SuppliersuppliesProduct.seeAlso}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>SuppliersuppliesProduct.supplierNotation}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>SuppliersuppliesProduct.unitsInStock}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>SuppliersuppliesProduct.unitsOnOrder}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="Product"/>
							<rdf:TextLink text="{path:'dataModel>categoryNotation',type:'sap.ui.model.type.String'}" linkText="{i18n>Product.categoryNotation}"/>
							<rdf:TextLink text="{path:'dataModel>comment',type:'sap.ui.model.type.String'}" linkText="{i18n>Product.comment}"/>
								<Text text="{path:'dataModel>discontinued',type:'sap.ui.model.type.Boolean'}"/>  
							<rdf:TextLink text="{path:'dataModel>productName',type:'sap.ui.model.type.String'}" linkText="{i18n>Product.productName}"/>
							<Text text="{path:'dataModel>productUnitPrice',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							<rdf:TextLink text="{path:'dataModel>quantityPerUnit',type:'sap.ui.model.type.String'}" linkText="{i18n>Product.quantityPerUnit}"/>
							<Text text="{path:'dataModel>reorderLevel',type:'sap.ui.model.type.Integer' }"/>
							<rdf:TextLink text="{path:'dataModel>seeAlso',type:'sap.ui.model.type.String'}" linkText="{i18n>Product.seeAlso}"/>
							<rdf:TextLink text="{path:'dataModel>supplierNotation',type:'sap.ui.model.type.String'}" linkText="{i18n>Product.supplierNotation}"/>
							<Text text="{path:'dataModel>unitsInStock',type:'sap.ui.model.type.Integer' }"/>
							<Text text="{path:'dataModel>unitsOnOrder',type:'sap.ui.model.type.Integer' }"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>