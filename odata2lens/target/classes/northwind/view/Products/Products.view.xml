<mvc:View controllerName="com.inova8.lens.controller.EntitySet" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>Products.ViewTitle}">
		<content>
			<Table id="table" inset="false" items="{ path: 'dataModel>/Product' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>Products.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Products.categoryNotation}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Products.comment}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Products.discontinued}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Products.isDefinedBy}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Products.productName}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Products.productUnitPrice}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Products.quantityPerUnit}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Products.reorderLevel}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Products.supplierNotation}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Products.unitsInStock}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Products.unitsOnOrder}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="Product"/>
  <rdf:TextLink text="{path:'dataModel>categoryNotation',type:'sap.ui.model.type.String'}" linkText="{i18n>Product.categoryNotation}"/>
  <rdf:TextLink text="{path:'dataModel>comment',type:'sap.ui.model.type.String'}" linkText="{i18n>Product.comment}"/>
  <Text text="{path:'dataModel>discontinued',type:'sap.ui.model.type.Boolean'}"/>  
  <rdf:TextLink text="{path:'dataModel>isDefinedBy',type:'sap.ui.model.type.String'}" linkText="{i18n>Product.isDefinedBy}"/>
  <rdf:TextLink text="{path:'dataModel>productName',type:'sap.ui.model.type.String'}" linkText="{i18n>Product.productName}"/>
  <Text text="{path:'dataModel>productUnitPrice',type:'sap.ui.model.type.Float' }"/>
  <rdf:TextLink text="{path:'dataModel>quantityPerUnit',type:'sap.ui.model.type.String'}" linkText="{i18n>Product.quantityPerUnit}"/>
  <Text text="{path:'dataModel>reorderLevel',type:'sap.ui.model.type.Integer' }"/>
  <rdf:TextLink text="{path:'dataModel>supplierNotation',type:'sap.ui.model.type.String'}" linkText="{i18n>Product.supplierNotation}"/>
  <Text text="{path:'dataModel>unitsInStock',type:'sap.ui.model.type.Integer' }"/>
  <Text text="{path:'dataModel>unitsOnOrder',type:'sap.ui.model.type.Integer' }"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>