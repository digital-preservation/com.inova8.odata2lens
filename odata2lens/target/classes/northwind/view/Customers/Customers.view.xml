<mvc:View controllerName="com.inova8.lens.controller.EntitySet360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout"
	xmlns:rdf="com.inova8.lens.control" xmlns:core="sap.ui.core">
	<Page showHeader="false" id="page" navButtonPress="onNavBack" showNavButton="true" title="{i18n>Customers.ViewTitle}">
		<content>
			<Table id="table360" inset="false" items="{ path: 'dataModel>/Customer' , sorter: { path: 'label', descending: false } 
				}"
				noDataText="{entitySetView>/tableNoDataText}" busyIndicatorDelay="{entitySetView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished"  fixedLayout="false">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<HBox id="sourceTitle" alignItems="Center">
							<rdf:TextResource id="selectedResource" path="" entitySet=""/>
						</HBox>
						<Title id="pathTitle" text="{entitySetView>/navigationText}"/>
						<HBox id="versionsTitle" alignItems="Center">
							<Title text="(" required="false"/>
							<ComboBox id="versionSelection" items="{ path: 'entitySetView>/versions' }" selectionChange="onVersionChange">
								<core:Item key="{entitySetView>navigation}" text="{entityView>text}"/>
							</ComboBox>
							<Title text=")" required="false"/>
						</HBox>
						<Title id="tableHeader" text="{entitySetView>/entitySetTableTitle}"/>
						<ToolbarSpacer/>
						<SearchField id="searchField" tooltip="{i18n>search.searchTooltip}" search="onSearch" width="auto"></SearchField>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column >
						<Text text="{i18n>Customers.this}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.comment}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.customerAddress}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.customerCity}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.customerCompanyName}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.customerContactName}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.customerContactTitle}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.customerCountry}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.customerFax}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.customerPhone}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.customerPostalCode}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.customerWebsite}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.lat}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.lat_long}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.long}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.regionDescription}"/>
					</Column>
					<Column demandPopin="true" minScreenWidth="Tablet">
						<Text text="{i18n>Customers.seeAlso}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem id="template360" type="Navigation" press="onPress">
						<cells>
							<rdf:TextResource path="dataModel>" entitySet="Customer"/>
							<rdf:TextLink text="{path:'dataModel>comment',type:'sap.ui.model.type.String'}" linkText="{i18n>Customer.comment}"/>
							<rdf:TextLink text="{path:'dataModel>customerAddress',type:'sap.ui.model.type.String'}" linkText="{i18n>Customer.customerAddress}"/>
							<rdf:TextLink text="{path:'dataModel>customerCity',type:'sap.ui.model.type.String'}" linkText="{i18n>Customer.customerCity}"/>
							<rdf:TextLink text="{path:'dataModel>customerCompanyName',type:'sap.ui.model.type.String'}" linkText="{i18n>Customer.customerCompanyName}"/>
							<rdf:TextLink text="{path:'dataModel>customerContactName',type:'sap.ui.model.type.String'}" linkText="{i18n>Customer.customerContactName}"/>
							<rdf:TextLink text="{path:'dataModel>customerContactTitle',type:'sap.ui.model.type.String'}" linkText="{i18n>Customer.customerContactTitle}"/>
							<rdf:TextLink text="{path:'dataModel>customerCountry',type:'sap.ui.model.type.String'}" linkText="{i18n>Customer.customerCountry}"/>
							<rdf:TextLink text="{path:'dataModel>customerFax',type:'sap.ui.model.type.String'}" linkText="{i18n>Customer.customerFax}"/>
							<rdf:TextLink text="{path:'dataModel>customerPhone',type:'sap.ui.model.type.String'}" linkText="{i18n>Customer.customerPhone}"/>
							<rdf:TextLink text="{path:'dataModel>customerPostalCode',type:'sap.ui.model.type.String'}" linkText="{i18n>Customer.customerPostalCode}"/>
							<rdf:TextLink text="{path:'dataModel>customerWebsite',type:'sap.ui.model.type.String'}" linkText="{i18n>Customer.customerWebsite}"/>
							<Text text="{path:'dataModel>lat',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							<rdf:TextLink text="{path:'dataModel>lat_long',type:'sap.ui.model.type.String'}" linkText="{i18n>Customer.lat_long}"/>
							<Text text="{path:'dataModel>long',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','maxFractionDigits':2} }"/>
							<rdf:TextLink text="{path:'dataModel>regionDescription',type:'sap.ui.model.type.String'}" linkText="{i18n>Customer.regionDescription}"/>
							<rdf:TextLink text="{path:'dataModel>seeAlso',type:'sap.ui.model.type.String'}" linkText="{i18n>Customer.seeAlso}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>