<mvc:View controllerName="com.inova8.lens.controller.Entity360" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form" xmlns:table="sap.ui.table" xmlns:rdf="com.inova8.lens.control" xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:core="sap.ui.core">
	<Page showHeader="true" id="page" navButtonPress="onNavBack" showNavButton="false" title="{i18n>OrderDetail.Title}" busy="{entityView>/busy}"
		busyIndicatorDelay="{entityView>/delay}" >
		<customHeader>
			<Toolbar>
				<ToolbarSpacer/>
				<Title text="{i18n>OrderDetail.this}"/>
				<rdf:TextResource path="dataModel>" entitySet="OrderDetail"/>
				<Title text="{i18n>OrderDetail.Title}"/>
				<ToolbarSpacer/>
				<ToggleButton id="toggleColumns" icon="sap-icon://hide" activeIcon="sap-icon://show" press="onSettingsPressed" visible="false"	>
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</ToggleButton>
				
			</Toolbar>
		</customHeader>
		<Table id="form360" inset="false" fixedLayout="true" class="multicolumnform" updateFinished="hideColumns">
			<columns>
				<Column hAlign="Right" width="200px">
					<Text text=""/>
				</Column>
				<Column visible="true">
				</Column>
			</columns>
			<items>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OrderDetail.comment}" required="false"/> 
						<rdf:TextLink text="{path:'dataModel>comment',type:'sap.ui.model.type.String' }" linkText="{i18n>OrderDetail.comment}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OrderDetail.orderDetailUnitPrice}" required="false"/> 
						<Text text="{path:'dataModel>orderDetailUnitPrice',type:'sap.ui.model.type.Float' }"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OrderDetail.discount}" required="false"/> 
						<Text text="{path:'dataModel>discount',type:'sap.ui.model.type.Float', formatOptions:{'style':'short','minFractionDigits':5} }"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OrderDetail.orderNotation}" required="false"/> 
						<rdf:TextLink text="{path:'dataModel>orderNotation',type:'sap.ui.model.type.String' }" linkText="{i18n>OrderDetail.orderNotation}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OrderDetail.productNotation}" required="false"/> 
						<rdf:TextLink text="{path:'dataModel>productNotation',type:'sap.ui.model.type.String' }" linkText="{i18n>OrderDetail.productNotation}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OrderDetail.quantity}" required="false"/> 
						<Text text="{path:'dataModel>quantity',type:'sap.ui.model.type.Integer' }"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OrderDetail.seeAlso}" required="false"/> 
						<rdf:TextLink text="{path:'dataModel>seeAlso',type:'sap.ui.model.type.String' }" linkText="{i18n>OrderDetail.seeAlso}"/>
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OrderDetail.order}" required="false"/> 
						<rdf:TextResource path="dataModel>order" entitySet="Order"/>		
					</cells>
				</ColumnListItem>
				<ColumnListItem >
					<cells>
						<Label text="{i18n>OrderDetail.product}" required="false"/> 
						<rdf:TextResource path="dataModel>product" entitySet="Product"/>		
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</Page>
</mvc:View>